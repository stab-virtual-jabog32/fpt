%div#map(style="height: 600px; width: 600px;")

:javascript
  document.addEventListener('DOMContentLoaded', function() {
    var map = L.map('map').setView([51.505, -0.09], 13);  // Initial center and zoom

    L.tileLayer('https://{s}.tile.openstreetmap.de/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenMapSurfer contributors'
    }).addTo(map);




    // Waypoints data (replace with actual data from @flight)
    var waypoints = [
      #{raw @flight.waypoints.map { |wp| "[#{wp.latitude}, #{wp.longitude}]" }.join(", ")}
    ];

    var latlngs = [];
    waypoints.forEach(function(coords, index) {
      // Custom circle marker for military-style waypoints
      var marker = L.circleMarker(coords, {
        color: 'blue',       // Outline color
        fillColor: 'yellow', // Fill color
        fillOpacity: 0.8,    // Opacity of the fill
        radius: 10,          // Size of the circle (radius)
        weight: 2            // Thickness of the outline
      }).addTo(map)
        .bindPopup("Waypoint " + (index + 1));  // Add a popup for each waypoint

      latlngs.push(coords);  // Collect all lat/lngs to draw the route
    });

    // If there are multiple waypoints, draw a polyline
    if (latlngs.length > 1) {
      var polyline = L.polyline(latlngs, { color: 'red' }).addTo(map);
      map.fitBounds(polyline.getBounds());  // Fit the map view to the polyline
    }
  });
